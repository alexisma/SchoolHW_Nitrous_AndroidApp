<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.gamestore"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.gamestore.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.gamestore.GameList"
            android:label="@string/title_activity_game_list" >
        </activity>
        <activity
            android:name="com.app.gamestore.AddGame"
            android:label="@string/title_activity_add_game" >
        </activity>
        <activity
            android:name="com.app.gamestore.Delete"
            android:label="@string/title_activity_delete" >
        </activity>
        <activity
            android:name="com.app.gamestore.Update"
            android:label="@string/title_activity_update" >
        </activity>
    </application>

</manifest>
